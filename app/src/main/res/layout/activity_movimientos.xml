<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_movimientos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Movimientos">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="169dp"
        android:layout_height="157dp"
        android:contentDescription="@string/movimientos_icono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movement_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="@string/movimientos"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:text="@string/saldo_actual"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:contentDescription="@string/icono_cash"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:srcCompat="@drawable/cash_icono" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="91dp"
        android:layout_height="44dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/mxn"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/saldo_pesos"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btn_movIngresar"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/ingresar_dinero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_movPrestamo"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="104dp"
        android:text="@string/pr_stamo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movRetirar" />

    <Button
        android:id="@+id/btn_movUltimos"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Ultimos Movimientos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movPrestamo"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btn_ConvDivisas"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Conversion de Divisas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movUltimos"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/btn_movRetirar"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/retirar_dinero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_movIngresar" />

</androidx.constraintlayout.widget.ConstraintLayout>